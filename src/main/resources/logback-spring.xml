    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- ========================================================= -->
    <!-- ðŸ“˜ APP_LOGï¼šä¸»ä¸šåŠ¡æ—¥å¿—ï¼ˆINFOã€WARNï¼Œä¸å«ERRORï¼‰ -->
    <!-- ========================================================= -->
    <appender name="APP_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-app.log</file>   <!-- ä¸»æ—¥å¿—æ–‡ä»¶ -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- æ¯å¤©æ»šåŠ¨æ–°æ–‡ä»¶ï¼Œæœ€å¤šä¿ç•™7å¤© -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-app-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>300MB</totalSizeCap>          <!-- æ€»å®¹é‡ä¸Šé™ -->
        </rollingPolicy>
        <!-- è¿‡æ»¤æŽ‰ERRORçº§åˆ«æ—¥å¿—ï¼ˆäº¤ç»™ERROR_LOGå¤„ç†ï¼‰ -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸ“• ERROR_LOGï¼šé”™è¯¯æ—¥å¿—ï¼ˆä»…ERRORï¼‰ -->
    <!-- ========================================================= -->
    <appender name="ERROR_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.log</file>  <!-- é”™è¯¯æ—¥å¿—æ–‡ä»¶ -->
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- æ¯å¤©æ»šåŠ¨ï¼Œä¿ç•™14å¤© -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-error-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <!-- åªæŽ¥å—ERRORçº§åˆ«æ—¥å¿— -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸ“— DEBUG_LOGï¼šè°ƒè¯•æ—¥å¿—ï¼ˆä»…DEBUGï¼‰ -->
    <!-- ========================================================= -->
    <appender name="DEBUG_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-debug.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- æ¯å¤©æ»šåŠ¨ï¼Œä¿ç•™3å¤© -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-debug-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>3</maxHistory>
            <totalSizeCap>150MB</totalSizeCap>
        </rollingPolicy>
        <!-- ä»…æŽ¥æ”¶DEBUGåŠä»¥ä¸Šçº§åˆ« -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸ’» æŽ§åˆ¶å°è¾“å‡ºï¼ˆæ–¹ä¾¿æœ¬åœ°å¼€å‘è§‚å¯Ÿï¼‰ -->
    <!-- ========================================================= -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- æŽ§åˆ¶å°åªæ˜¾ç¤ºINFOçº§åˆ«ä»¥ä¸Š -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸš€ å¼‚æ­¥Appenderï¼ˆæé«˜æ€§èƒ½ï¼Œé˜²æ­¢IOé˜»å¡žä¸»çº¿ç¨‹ï¼‰ -->
    <!-- ========================================================= -->
    <appender name="ASYNC_APP" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>10000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="APP_LOG"/>
    </appender>

    <appender name="ASYNC_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>10000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>true</includeCallerData>
        <appender-ref ref="ERROR_LOG"/>
    </appender>

    <appender name="ASYNC_DEBUG" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>5000</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="DEBUG_LOG"/>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸ¤– é’‰é’‰é”™è¯¯æŽ¨é€ï¼ˆé€šè¿‡ DingDingMessageUtil å®žçŽ°ï¼‰ -->
    <!-- ========================================================= -->
    <appender name="DINGDING_ERROR" class="com.trading.log.DingDingErrorAppender"/>
    <appender name="ASYNC_DINGDING_ERROR" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>100</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="DINGDING_ERROR"/>
    </appender>

    <!-- ========================================================= -->
    <!-- ðŸ§© åŒ…çº§åˆ«æ—¥å¿—æŽ§åˆ¶ï¼ˆæ ¹æ®é¡¹ç›®åŒ…åè°ƒæ•´ï¼‰ -->
    <!-- ========================================================= -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="com.trading" level="DEBUG"/> <!-- ä½ çš„ä¸»åŒ… -->

    <!-- ========================================================= -->
    <!-- ðŸŒ æ ¹æ—¥å¿—é…ç½® -->
    <!-- ========================================================= -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>       <!-- æŽ§åˆ¶å° -->
        <appender-ref ref="ASYNC_APP"/>     <!-- æ™®é€šæ—¥å¿— -->
        <appender-ref ref="ASYNC_ERROR"/>   <!-- é”™è¯¯æ—¥å¿— -->
        <appender-ref ref="ASYNC_DINGDING_ERROR"/> <!-- âœ… é’‰é’‰æŽ¨é€ -->
    </root>

</configuration>
